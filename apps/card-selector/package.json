{
  "name": "electron-quick-start",
  "version": "1.0.0",
  "description": "Initial D Naomi 2 Card Selector",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win nsis:false --publish never",
    "build:portable": "electron-builder -w portable --publish never"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "build": {
    "appId": "com.initiald.cardselector",
    "productName": "Card Selector",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "styles.css",
      "index.html",
      "cards/",
      "data/",
      "node_modules/"
    ],
    "win": {
      "forceCodeSigning": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "appdata-path": "^1.0.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "fs-extra": "^11.3.3"
  }
}
